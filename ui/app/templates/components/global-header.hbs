<nav class="navbar is-primary">
  <div class="navbar-brand">
    <span data-test-header-gutter-toggle class="gutter-toggle" aria-label="menu" onclick={{action onHamburgerClick}}>
      {{partial "partials/hamburger-menu"}}
    </span>
    <span class="navbar-item is-logo">
      {{partial "partials/nomad-logo"}}
    </span>
  </div>
  <div class="navbar-end">
    {{#if (eq config.environment "development")}}
      {{#link-to "freestyle" class="navbar-item"}}Styleguide{{/link-to}}
    {{/if}}
    <a href="https://nomadproject.io/docs" class="navbar-item">Documentation</a>
    {{#link-to "settings.tokens" class="navbar-item"}}ACL Tokens{{/link-to}}
  </div>
</nav>
<div class="navbar is-secondary">
  <div class="navbar-item is-gutter">
    {{#power-select
      data-test-region-switcher
      triggerClass="is-outlined"
      options=sortedRegions
      selected=system.activeRegion
      searchEnabled=false
      onchange=(action gotoRegion) as |region|}}
      <span class="ember-power-select-prefix">Region: </span>{{region}}
    {{/power-select}}
  </div>
  <nav class="breadcrumb is-large">
    <ul>
      {{yield}}
    </ul>
  </nav>
</div>
