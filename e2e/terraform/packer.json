{
  "builders": [{
    "type": "amazon-ebs",
    "region": "us-east-1",
    "source_ami": "ami-0cc96feef8c6bbff3",
    "instance_type": "t2.medium",
    "ssh_username": "ec2-user",
    "ami_name": "nomad-e2e-{{timestamp}}",
    "ami_groups": ["all"]
  }],
  "provisioners":  [
  {
    "type": "shell",
    "inline": [
      "sudo mkdir /ops",
      "sudo chmod 777 /ops"
    ]
  },
  {
    "type": "file",
    "source": "shared",
    "destination": "/ops"
  },
  {
    "type": "shell",
    "script": "shared/scripts/setup.sh"
  }]
}
